rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        && request.auth.uid == "WEOFvjCGEwTQ52YJAuIcmOk3ZDB2";
    }

    match /users/{userId} {
      allow read, write: if signedIn() && request.auth.uid == userId || isAdmin();
      
      match /products/{productId} {
        allow read: if signedIn();
        allow create, update, delete: if signedIn() && request.auth.uid == userId;
      }
      
      match /sales_notifications/{notifId} {
        allow read, update: if request.auth.uid == userId;
        allow create: if signedIn();
        allow delete: if isAdmin();
      }

      match /private/{docId} {
        allow read, write: if signedIn() && (request.auth.uid == userId || isAdmin());
      }

      match /public/{docId} {
        allow read: if true; // Public profiles are readable by anyone
        allow write: if signedIn() && request.auth.uid == userId; // Only owner can write
      }
      
      match /inbox/{messageId} {
        allow read, update: if signedIn() && (request.auth.uid == userId || isAdmin());
        allow create: if signedIn() && 
          request.resource.data.toUserId == userId &&
          (request.resource.data.fromUserId == request.auth.uid || isAdmin());
        allow delete: if isAdmin();
      }
    }
    
    match /users/{userId}/products/{productId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }

    match /ads/{adId} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update: if signedIn() && resource.data.ownerUid == request.auth.uid;
      allow delete: if signedIn() && resource.data.ownerUid == request.auth.uid;

      match /requests/{requestId} {
        // القراءة
        allow read: if signedIn() && (
          request.auth.uid == resource.data.merchantId ||
          request.auth.uid == get(
            /databases/$(database)/documents/ads/$(adId)
          ).data.ownerUid ||
          isAdmin()
        );

        // الإنشاء (طالب التعامل)
        allow create: if signedIn() &&
          request.resource.data.merchantId == request.auth.uid &&
          request.resource.data.status == "pending";

        // التحديث (صاحب الإعلان فقط)
        allow update: if signedIn() &&
          request.auth.uid == get(
            /databases/$(database)/documents/ads/$(adId)
          ).data.ownerUid &&
          request.resource.data.status in ["accepted", "rejected"];

        allow delete: if isAdmin();
      }
    }
    
    match /transactions/{transactionId} {
      allow get: if (signedIn() && request.auth.uid in resource.data.participants) || isAdmin();
      allow list: if signedIn();

      allow create, delete: if isAdmin();
      allow update: if isAdmin() || marketerCanUpdate(transactionId);

      match /sales/{saleId} {
        allow read: if (signedIn() && request.auth.uid in get(/databases/$(database)/documents/transactions/$(transactionId)).data.participants) || isAdmin();

        allow create: if isMarketer(transactionId)
          && request.resource.data.recordedBy == request.auth.uid
          && request.resource.data.saleDate is string
          && request.resource.data.trackingNumber is string
          && request.resource.data.imageUrl is string
          && request.resource.data.saleNumber is number;

        allow update, delete: if isAdmin();
      }
    }

    match /payments/{paymentId} {
      allow create: if signedIn();
      allow read, update, delete: if isAdmin();
    }
    
    match /chats/{chatId} {
      allow get: if signedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow create: if signedIn() && request.auth.uid in request.resource.data.participants;
      allow update, delete: if isAdmin();

      match /messages/{messageId} {
        allow read, list: if signedIn() && (get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]) || isAdmin());
        allow create: if signedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]) && request.resource.data.senderUid == request.auth.uid;
        // Disallow updates/deletes for message integrity
        allow update, delete: if false;
      }
    }

    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.fromUid == request.auth.uid;
      allow update, delete: if false;
    }

    match /admin/{docId} {
      allow read, write: if isAdmin();
    }

    match /violations/{violationId} {
      allow read: if isAdmin();
      allow create: if signedIn();
      allow update, delete: if false;
    }
  }
}
